# VoltForge Environment Configuration Template
# Copy this file to .env and update the values as needed

# Environment
ENVIRONMENT=development
DEBUG=true

# Redis configuration
REDIS_URL=redis://localhost:6379/0

# API configuration
API_HOST=0.0.0.0
API_PORT=8000

# External API keys (optional - for component research)
# Get these from respective API providers
# DIGIKEY_API_KEY=your_digikey_api_key_here
# OCTOPART_API_KEY=your_octopart_api_key_here

# Vector database configuration
VECTOR_DB_PATH=./data/vector_db
DATASHEET_CACHE_PATH=./data/datasheets

# Embedding model configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu

# Circuit simulation
NGSPICE_EXECUTABLE=ngspice

# Security
SECRET_KEY=your-secret-key-here-change-in-production
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance tuning
MAX_WORKERS=4
VECTOR_SEARCH_LIMIT=10
COMPONENT_CACHE_TTL=3600

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10